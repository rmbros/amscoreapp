@model AmsApp.Models.OBLead
<div class="col-xl-12 pl-0 pr-0">
    <div class="card">
        <div class="card-header border-0 pb-0">
        </div>
        <div class="card-body">
            @*<form id="frmOnCall" name="frmOnCall">*@
            <div class="form-row">
                <div class="form-group col-md-12 pb-3 pt-2 center">
                    <label><b>@Model.MaskedMobile</b> </label>
                    <input type="hidden" asp-for="Mobile" />
                    <input type="hidden" asp-for="Id" />
                </div>
                <div class="form-group col-md-12  pb-3">
                    <label asp-for="Disposition"> <b>Disposition</b> </label>
                    <select class="form-control" asp-for="Disposition">
                        <option value="" selected>Choose...</option>
                    </select>
                </div>
                <div class="form-group col-md-12  pb-3 preappt">
                    <label asp-for="Name"><b>Name</b> </label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Enter Name....">
                </div>
                <div class="form-group col-md-12  pb-3 preappt">
                    <label asp-for="Gender"><b>Gender</b> </label>
                    <select class="form-control" asp-for="Gender">
                        <option value="" selected>Choose...</option>
                    </select>
                </div>
                <div class="form-group col-md-12  pb-3 preappt">
                    <label asp-for="Age"><b>Age</b> </label>
                    <input type="number" class="form-control" asp-for="Age" placeholder="Enter Age....">
                </div>
                <div class="form-group col-md-12  pb-3 preappt">
                    <label asp-for="MainDisease"><b>MainDisease</b> </label>
                    <select class="form-control" asp-for="MainDisease">
                        <option value="" selected>Choose...</option>
                    </select>
                </div>
                <div class="form-group col-md-12  pb-3 preappt">
                    <label asp-for="SubDisease"><b>SubDisease</b> </label>
                    <select class="form-control" asp-for="SubDisease" asp-items="ViewBag.SubDiseases">
                        <option value="" selected>Choose...</option>
                    </select>
                </div>
                <div class="form-group col-md-12  pb-3 preappt">
                    <label asp-for="ClinicBranch"><b>ClinicBranch</b> </label>
                    <select class="form-control" asp-for="ClinicBranch" asp-items="ViewBag.ClinicBranchs">
                        <option value="" selected>Choose...</option>
                    </select>
                </div>
                <div class="form-group col-md-12  pb-3 preappt">
                    <label asp-for="Email"><b>Email</b> </label>
                    <input type="text" class="form-control" asp-for="Email" placeholder="Enter Email....">
                </div>
                <div class="form-group col-md-12  pb-3 preappt">
                    <label asp-for="Address"><b>Address</b> </label>
                    <input type="text" class="form-control" asp-for="Address" placeholder="Enter Address....">
                </div>
                <div class="form-group col-md-12  pb-3 preappt">
                    <label asp-for="City"><b>City</b> </label>
                    <select class="form-control" asp-for="City" asp-items="ViewBag.Cities">
                        <option value="" selected>Choose...</option>
                    </select>
                </div>
                <div class="form-group col-md-12  pb-3 preappt">
                    <label asp-for="State"><b>State</b> </label>
                    <select class="form-control" asp-for="State" asp-items="ViewBag.States">
                        <option value="" selected>Choose...</option>
                    </select>
                </div>
                <div class="form-group col-md-12  pb-3 preappt">
                    <label asp-for="Country"><b>Country</b> </label>
                    <select class="form-control" asp-for="Country" asp-items="ViewBag.Countries">
                        <option value="" selected>Choose...</option>
                    </select>
                </div>
                <div class="form-group col-md-12  pb-3 preappt">
                    <label asp-for="Pin"><b>Pin</b> </label>
                    <input type="text" class="form-control" asp-for="Pin" placeholder="Enter Pin....">
                </div>
                <div class="form-group col-md-12  pb-3 calba">
                    <label asp-for="NextCallDate"><b>Next Call Date</b> </label>
                    <input type="date" class="form-control" asp-for="NextCallDate" placeholder="Enter Next Call Date....">
                </div>
                <div class="form-group col-md-12  pb-3 calba">
                    <label asp-for="Notes"><b>Notes</b> </label>
                    <input type="text" class="form-control" asp-for="Notes" placeholder="Enter Notes....">
                </div>
                <div class="form-group col-md-12  pb-3  pl-4 checkbox-success">
                    <input type="checkbox" class="form-check-input" asp-for="OnHold">
                    <label class="form-check-label" asp-for="OnHold"><b>On Hold</b></label>
                </div>
                <div class="col-md-12 pb-3">
                    <button type="button" id="btnSaveNext" class="btn btn-rounded btn-primary btn-lg btn-block"><strong>Save & Next</strong></button>
                </div>
                <div class="col-md-12 pb-3">
                    <button type="button" id="btnSaveStop" class="btn btn-rounded btn-danger btn-lg btn-block"><strong>Save & Close</strong></button>
                </div>
                <div class="alert alert-danger" style="display:none;" id="alertError" name="alertError">
                    <span><label name="lblError" id="lblError"></label></span>
                </div>
                <div class="alert alert-success" style="display:none;" id="alertSuccess" name="alertSuccess">
                    <span><label name="lblSuccess" id="lblSuccess">Numbers Assigned Successfully</label></span>
                </div>
            </div>
            @*</form>*@
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/Views/OBCall/OnCall.cshtml.js"></script>
}
